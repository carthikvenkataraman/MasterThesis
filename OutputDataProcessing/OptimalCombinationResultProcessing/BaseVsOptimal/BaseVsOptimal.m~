clear all
close all
clc

folderLocation = '/home/karthik/Documents/GitHubRepos/MasterThesis-PropOpt/OutputDataProcessing/OptimalProductivityOutputs/';
year = 2015;
gcwCode = 'A';
baseFileLocation = strcat(folderLocation,int2str(year), '/', gcwCode,'0D16.mat');
optimalFileLocation = strcat(folderLocation,int2str(year), '/', gcwCode,'1.mat');

Base = load(baseFileLocation);
Optimal = load(optimalFileLocation);

barX = ['D16', 'Optimal - D13'];

revBase = Base.rN/Base.rN;
revOpt = Optimal.rN/Base.rN;
revOptDummy = 0;
rN = [revBase, revOpt];
rNDummy = [revBase, revOptDummy];

cFixedConvBase = Base.cFixedConv/Base.cFixedConv;
cFixedConvOpt = Optimal.cFixedConv/Base.cFixedConv;
cFixedConvOptDummy = 0;
cFixedConv = [cFixedConvBase, cFixedConvOpt];
cFixedConvDummy = [cFixedConvBase, cFixedConvOptDummy];

cFixedElecBase = sum(Base.cFixedElec)/sum(Base.cFixedElec);
cFixedElecOpt = sum(Optimal.cFixedElec)/sum(Base.cFixedElec);
cFixedElecOptDummy = 0;
cFixedElec = [cFixedElecBase, cFixedElecOpt];
cFixedElecDummy = [cFixedElecBase, cFixedElecOptDummy];

cDriverBase = Base.cDriver/Base.cDriver;
cDriverOpt = Optimal.cDriver/Base.cDriver;
cDriverOptDummy = 0;
cDriver = [cDriverBase, cDriverOpt];
cDriverDummy = [cDriverBase, cDriverOptDummy];

cFuelBase = Base.cFuel/Base.cFuel;
cFuelOpt = Optimal.cFuel/Base.cFuel;
cFuelOptDummy = 0;
cFuel = [cFuelBase, cFuelOpt];
cFuelDummy = [cFuelBase, cFuelOptDummy];

cElecBase = Base.cElec/Base.cElec;
cElecOpt = Optimal.cElec/Base.cElec;
cElecOptDummy = 0;
cElec = [cElecBase, cElecOpt];
cElecDummy = [cElecBase, cElecOptDummy];

cMntBase = Base.cMnt/Base.cMnt;
cMntOpt = Optimal.cMnt/Base.cMnt;
cMntOptDummy = 0;
cMnt = [cMntBase, cMntOpt];
cMntDummy = [cMntBase, cMntOptDummy];

cTollsBase = Base.cTolls/Base.cTolls;
cTollsOpt = Optimal.cTolls/Base.cTolls;
cTollsOptDummy = 0;
cTolls = [cTollsBase, cTollsOpt];
cTollsDummy = [cTollsBase, cTollsOptDummy];

cTyresBase = Base.cTyres/Base.cTyres;
cTyresOpt = Optimal.cTyres/Base.cTyres;
cTyresOptDummy = 0;
cTyres = [cTyresBase, cTyresOpt];
cTyresDummy = [cTyresBase, cTyresOptDummy];

prodBase = Base.P;
prodOpt = Optimal.P;
prodOptDummy = 0;
prod = [prodBase, prodOpt];
prodDummy = [prodBase, prodOptDummy];

plotParameters = [rN; cFixedConv; cFixedElec; cDriver; cFuel; cElec; cMnt; cTolls; cTyres; prod];
plotParametersDummy = [rNDummy; cFixedConvDummy; cFixedElecDummy; cDriverDummy; cFuelDummy; cElecDummy; cMntDummy; cTollsDummy; cTyresDummy; prodDummy];

% plotParameters = [rN; cFixedConv; cDriver; cFuel; cMnt; cTolls; cTyres; prod];
% plotParametersDummy = [rNDummy; cFixedConvDummy; cDriverDummy; cFuelDummy; cMntDummy; cTollsDummy; cTyresDummy; prodDummy];


figure('name', 'Dummy');
for i=1:size(plotParametersDummy,1)
    for j=1:size(plotParametersDummy, 2)
        h = bar((i-1)*2+j, plotParametersDummy(i,j));
        hold all;
    end
end
axis([0 (i-1)*2+j 0 max(1,prodOpt)]);

figure('name', 'Actual');
for i=1:size(plotParameters,1)
    for j=1:size(plotParameters, 2)
        h = bar((i-1)*2+j, plotParameters(i,j));
        hold all;
    end
end
axis([0 (i-1)*2+j+2 0 max(1,prodOpt)]);